---
import "../styles/global.css"
import PageHeader from "../components/PageHeader.astro";
import Features from "../components/Features.astro";
import PageContent from "../components/PageContent.astro";
import Semesters from "../components/Semesters.astro";
import PageFooter from "../components/PageFooter.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abigail - Portfolio</title>

    <link rel="apple-touch-icon" sizes="180x180" href="Favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="Favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="Favicon/favicon-16x16.png">
    <link rel="manifest" href="Favicon/site.webmanifest">
    <link rel="mask-icon" href="Favicon/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="Favicon/favicon.ico">
    <meta name="msapplication-TileColor" content="#2b5797">
    <meta name="msapplication-config" content="Favicon/browserconfig.xml">
    <meta name="theme-color" content="#2b5797">

</head>
<body>

	<PageHeader />
    
<!-- Begin Showcase Section -->
    <section id="showcase">
        <div id="showcasetext">
            <h1>Abigail Lee</h1>
            <h2>Portfolio</h2>
            <blockquote> Words are the source of misunderstandings.</blockquote>
            <p id="author"> - Antoine de Saint-Exup√©ry</p>
        </div>
        
        <div id="showcaseimage">
            <img src="/images/technologiesbig.png" alt="Technologies" id="logosbig">
            <img src="/images/technologiessmall.png" alt="Technologies" id="logossmall">
        </div>
        
        <p id="showcaseintro">
            This is a showcase of my web design/devlopment work.
        </p>
        
        </section>
        <!-- End Showcase Section -->

    <Features/>

    <PageContent />

    <Semesters />

    <PageFooter/>

</body>
</html>